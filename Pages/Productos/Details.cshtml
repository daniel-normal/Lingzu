@page
@model Lingzu.Pages.Productos.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card rounded shadow">
                <div class="card-header bg-dark text-light text-center">
                    <h3 class="mb-0">
                        <i class="fas fa-info-circle"></i> Detalles del Producto
                    </h3>
                </div>
                <div class="card-body">
                    <h4 class="card-title">Producto</h4>
                    <hr />
                    <dl class="row">
                        <dd class="col-sm-12 mb-4">
                            <b>Nombre:</b> @Html.DisplayFor(model => model.Producto.NombreProducto)
                        </dd>
                        <dd class="col-sm-12 mb-4">
                            <b>Precio:</b> @Html.DisplayFor(model => model.Producto.PrecioProducto)
                        </dd>
                        <dd class="col-sm-12 mb-4">
                            <b>Cantidad:</b> @Html.DisplayFor(model => model.Producto.CantidadProducto)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a asp-page="./Edit" asp-route-id="@Model.Producto?.ProductoId" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver a la Lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
