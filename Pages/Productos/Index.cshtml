@page
@model Lingzu.Pages.Productos.IndexModel

@{
    ViewData["Title"] = "Productos";
}

<div class="container mt-4 mb-4 text-center">
    <div class="card rounded shadow">
        <div class="card-header bg-dark text-light">
            <h3 class="mb-0">
                <i class="fas fa-shopping-cart"></i> Productos
            </h3>
        </div>
        <div class="card-body">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Producto[0].NombreProducto)
                        </th >
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Producto[0].PrecioProducto)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Producto[0].CantidadProducto)
                        </th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Producto)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreProducto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PrecioProducto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CantidadProducto)
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.ProductoId" class="btn btn-sm btn-info"><i class="fas fa-edit"></i> Editar</a> |
                                <a asp-page="./Details" asp-route-id="@item.ProductoId" class="btn btn-sm btn-primary"><i class="fas fa-info-circle"></i> Detalles</a> |
                                <a asp-page="./Delete" asp-route-id="@item.ProductoId" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <a asp-page="Create" class="btn btn-primary w-100">
        <i class="fas fa-plus"></i> Nuevo
    </a>
</div>
