@page
@model Lingzu.Pages.Productos.CreateModel

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card rounded shadow">
                <div class="card-header bg-dark text-light text-center">
                    <h3 class="mb-0">
                        <i class="fas fa-cart-plus"></i> Registrar Producto
                    </h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Producto.NombreProducto" class="font-weight-bold">Nombre del Producto</label>
                            <input asp-for="Producto.NombreProducto" class="form-control" />
                            <span asp-validation-for="Producto.NombreProducto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Producto.PrecioProducto" class="font-weight-bold">Precio</label>
                            <input asp-for="Producto.PrecioProducto" class="form-control" />
                            <span asp-validation-for="Producto.PrecioProducto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Producto.CantidadProducto" class="font-weight-bold">Cantidad</label>
                            <input asp-for="Producto.CantidadProducto" class="form-control" />
                            <span asp-validation-for="Producto.CantidadProducto" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-2">
                            <button type="submit" class="btn btn-primary ml-2 w-100">Crear Producto</button>
                        </div>
                        <div class="form-group mt-2">
                            <a asp-page="Index" class="btn btn-secondary ml-2 w-100">Volver a la Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}