@page
@model Lingzu.Pages.Clientes.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>  <!-- Encabezado principal -->

<h3>Are you sure you want to delete this?</h3>  <!-- Pregunta de confirmación para eliminar -->

<div>
    <h4>Cliente</h4>  <!-- Encabezado para la sección de cliente -->
    <hr />  <!-- Línea horizontal para separar visualmente -->

    <dl class="row">
        <!-- Mostrar el Apellido Paterno del Cliente -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.ApellidoP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.ApellidoP)
        </dd>

        <!-- Mostrar el Apellido Materno del Cliente -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.ApellidoM)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.ApellidoM)
        </dd>

        <!-- Mostrar el Nombre del Cliente -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nombre)
        </dd>

        <!-- Mostrar el NIT del Cliente -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Nit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nit)
        </dd>
    </dl>

    <form method="post">
        <!-- Campo oculto para almacenar el ClienteId -->
        <input type="hidden" asp-for="Cliente.ClienteId" />

        <!-- Botón de eliminación -->
        <input type="submit" value="Delete" class="btn btn-danger" /> |

        <!-- Volver a la lista de clientes -->
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
