@page
@model Lingzu.Pages.Clientes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card rounded shadow">
                <div class="card-header bg-dark text-light text-center">
                    <h3 class="mb-0">
                        <i class="fas fa-user-plus"></i> Registrar
                    </h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Cliente.ApellidoP" class="font-weight-bold">Apellido Paterno</label>
                            <input asp-for="Cliente.ApellidoP" class="form-control" />
                            <span asp-validation-for="Cliente.ApellidoP" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cliente.ApellidoM" class="font-weight-bold">Apellido Materno</label>
                            <input asp-for="Cliente.ApellidoM" class="form-control" />
                            <span asp-validation-for="Cliente.ApellidoM" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cliente.Nombre" class="font-weight-bold">Nombre</label>
                            <input asp-for="Cliente.Nombre" class="form-control" />
                            <span asp-validation-for="Cliente.Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cliente.Nit" class="font-weight-bold">NIT</label>
                            <input asp-for="Cliente.Nit" class="form-control" />
                            <span asp-validation-for="Cliente.Nit" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-2">
                            <button type="submit" class="btn btn-primary ml-2 w-100">Registrar</button>
                        </div>
                        <div class="form-group mt-2">
                            <a asp-page="Index" class="btn btn-secondary ml-2 w-100">Volver a la Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}